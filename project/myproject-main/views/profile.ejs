                        </div><br>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="cards flex">
            <% user.posts.forEach(function(post){ %>
                <div class="card" style="width: 18rem;">
                    <img src="/images/upload/<%= post.image %>" class="card-img-top" alt="">
                    <div class="card-body">
                        <h5 class="card-title"><b>
                                <%= post.imageText%>
                            </b>
                        </h5>
                    </div>
                </div>
                <% }) %>
        </div>

    </div>


